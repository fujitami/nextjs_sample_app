generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Game {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  winner Boolean
  isShot Boolean @default(false)
}